{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build MP4 Player",
            "type": "cppbuild",
            "command": "C:\\msys64\\ucrt64\\bin\\gcc.exe",
            "args": [
                "-g",
                "${file}",
                "-I${workspaceFolder}\\ffmpeg\\include",
                "-L${workspaceFolder}\\ffmpeg\\lib",
                "-lavformat",
                "-lavcodec",
                "-lavutil",
                "-lswscale",
                "-lswresample",
                "-lwinmm",
                "-lgdi32",
                "-o",
                "${workspaceFolder}\\main.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}